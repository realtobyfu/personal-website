---
import BlogLayout from '../layouts/BlogLayout.astro';
import SiteHeader from '../components/blog/SiteHeader.astro';

const projects = [
  { title: 'Fieldnote', date: 'January 2025' },
  { title: 'Write-It-Down', date: 'April 2025' }
];
---

<BlogLayout title="Projects â€” Tobias Fu" description="Projects by Tobias Fu">
  <div class="blog-container">
    <SiteHeader currentPage="projects" />

    <header class="blog-index-header">
    </header>

    <ul class="post-list">
      {projects.map((project) => (
        <li class="post-list-item">
          <div class="post-list-link">
            <h2 class="post-list-title">{project.title}</h2>
            <div class="post-list-meta">
              <span class="post-list-date">{project.date}</span>
            </div>
          </div>
        </li>
      ))}
    </ul>
  </div>
</BlogLayout>

