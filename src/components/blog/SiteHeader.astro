---
interface Props {
  currentPage?: 'home' | 'essays' | 'projects' | 'about';
}

const { currentPage } = Astro.props;
---

<nav class="site-header">
  <div class="site-nav-left">
    <a href="/blog" class:list={['site-nav-link', { active: currentPage === 'essays' }]}>Essays / Gallery</a>
    <a href="/projects" class:list={['site-nav-link', { active: currentPage === 'projects' }]}>Projects</a>
    <a href="/about" class:list={['site-nav-link', { active: currentPage === 'about' }]}>About</a>
  </div>
  <a href="/" class:list={['site-nav-link', { active: currentPage === 'home' }]}>Home</a>
</nav>

<style>
  .site-header {
    justify-content: space-between;
  }

  .site-nav-left {
    display: flex;
    gap: var(--space-xl);
  }
</style>
